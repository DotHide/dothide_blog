<%= div_for(comment) do %>
  <div class="comments_wrapper clearfix">
    <div class="pull-left">
      <p><%= comment.body %></p>
      <p><small><span class="glyphicon glyphicon-comment"></span> Submitted <strong><%= time_ago_in_words(comment.created_at) %> ago</strong> by <%= comment.user.name %> </small></p>
    </div>
    <div class="btn-group pull-right">
      <% if comment.user == current_user -%>
        <%= link_to 'Delete', comment, :method => :delete, :data => { confirm: 'Sure?' }, class: 'btn btn-sm btn-default' %>
      <% end -%>
    </div>
  </div>
<% end -%>