<div class="row">
  <h2><%= @post.title %></h2>
  <p><%= @post.body %></p>
  <small><strong>by <%= @post.user.name %></strong> at <%= @post.created_at.strftime("%Y-%m-%d %H:%M:%S") %> </small>
  <hr>
  <h3>
    <%= @post.comments.count %> Comments
  </h3>
  <%= render :partial => @post.comments %>
  <br>
  <%= render 'comment_form' %>
</div>